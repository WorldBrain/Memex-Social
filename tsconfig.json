{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "removeComments": true,
        "lib": ["es2017", "dom"],
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": ["./node_modules/@types"]
    },
    "xxxfilesGlob": ["./ts/**/*.ts", "!./node_modules/**/*.ts"]
}
