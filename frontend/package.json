{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "concurrently -n DS,FE -p name \"yarn dev-server\" \"yarn client\"",
    "client": "cross-env BROWSER=none react-scripts start",
    "prepare": "true",
    "dev-server": "nodemon --watch ./dev-server --exec 'ts-node --project dev-server/tsconfig.json' dev-server/src/main.ts",
    "generate-types": "ts-node --project scripts/tsconfig.json scripts/generate-types.ts",
    "karma": "karma",
    "firebase": "cd ../firebase && firebase",
    "build": "react-scripts build",
    "build:deptree": "depcruise --exclude '^node_modules' --output-type dot ./src | dot -T svg > /tmp/dependencygraph.svg",
    "test": "TS_NODE_PROJECT=tsconfig.mocha.json mocha --require ts-node/register --require ignore.loader.js 'src/**/*.test.ts'",
    "test:watch": "TS_NODE_PROJECT=tsconfig.mocha.json mocha --watch --watch-extensions ts --require ts-node/register 'src/**/*.test.ts'",
    "eject": "react-scripts eject",
    "create:storage-module": "cp -r code-templates/storage-module.ts src/storage/modules/${MODULE}.ts",
    "create:ui-component": "cp -r code-templates/ui-element src/main-ui/components/${ELEMENT}",
    "create:ui-container": "cp -r code-templates/ui-element src/main-ui/containers/${ELEMENT}",
    "create:ui-page": "cp -r code-templates/ui-element src/main-ui/pages/${ELEMENT}",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "build:base": "REACT_APP_BACKEND=firebase env-cmd -f $ENV_FILE react-scripts build && rm -rf ../firebase/public/* && mv build/* ../firebase/public/",
    "build:staging": "ENV_FILE=.env.staging yarn build:base",
    "build:production": "ENV_FILE=.env.production.local yarn build:base",
    "deploy:base": "yarn firebase -P $FIREBASE_PROJECT deploy --only hosting",
    "deploy:staging": "yarn build:staging && FIREBASE_PROJECT=worldbrain-staging yarn deploy:base",
    "deploy:production": "yarn build:production && FIREBASE_PROJECT=worldbrain-1057 yarn deploy:base"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "proxy": "http://localhost:5030/",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@firebase/testing": "^0.20.5",
    "@josephg/resolvable": "1.0.0",
    "@testing-library/react": "^10.4.8",
    "@types/styled-components": "^5.1.0",
    "@worldbrain/storex": "^0.3.3",
    "@worldbrain/storex-backend-dexie": "^0.2.2",
    "@worldbrain/storex-backend-firestore": "^0.1.0",
    "@worldbrain/storex-data-tools": "^0.1.0",
    "@worldbrain/storex-media-middleware": "^0.0.1",
    "@worldbrain/storex-pattern-modules": "^0.3.0",
    "@worldbrain/storex-typescript-generation": "^0.1.0",
    "@worldbrain/memex-common": "^0.0.1",
    "blob-to-buffer": "^1.2.8",
    "blob-util": "^2.0.2",
    "classnames": "^2.2.6",
    "dauria": "^2.0.0",
    "firebase": "^7.17.2",
    "firebase-tools": "^8.7.0",
    "font-awesome": "^4.7.0",
    "i18next": "^19.5.4",
    "immutability-helper": "^3.0.0",
    "js-levenshtein": "^1.1.6",
    "lodash": "^4.17.11",
    "moment": "^2.27.0",
    "node-sass": "^4.11.0",
    "query-string": "^6.4.2",
    "react": "^16.8.4",
    "react-click-outside": "^3.0.1",
    "react-dom": "^16.8.4",
    "react-i18next": "^11.7.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^3.4.1",
    "react-waypoint": "^9.0.3",
    "routes": "^2.1.0",
    "slugify": "^1.3.5",
    "styled-components": "^5.1.1",
    "styled-components-spacing": "^3.1.1",
    "truncate": "^2.1.0",
    "typedarray-to-buffer": "^3.1.5",
    "typeface-poppins": "^0.0.72",
    "ui-logic-core": "^0.2.0",
    "ui-logic-react": "^0.1.4"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-create-react-app": "^3.1.2",
    "@storybook/react": "^5.3.19",
    "@types/classnames": "^2.2.7",
    "@types/expect": "^1.20.4",
